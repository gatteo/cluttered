{
  "name": "cluttered",
  "version": "1.1.0",
  "description": "A beautiful, addictive disk cleaner for developers",
  "main": "dist/main/main/index.js",
  "author": "Matteo Giardino <me@matteogiardino.com>",
  "license": "MIT",
  "homepage": "https://cluttered.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/gatteo/cluttered.git"
  },
  "bugs": {
    "url": "https://github.com/gatteo/cluttered/issues"
  },
  "keywords": [
    "disk-cleaner",
    "developer-tools",
    "node_modules",
    "disk-space",
    "macos",
    "electron",
    "cleanup",
    "clean my mac"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:renderer\" \"pnpm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "pnpm run build:main && electron .",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "pnpm run build && electron-builder",
    "package:dir": "pnpm run build && electron-builder --dir",
    "package:mas": "./scripts/build-mas.sh",
    "package:dmg": "./scripts/build-dmg.sh",
    "release": "./scripts/release.sh",
    "publish:patch": "./scripts/publish.sh patch",
    "publish:minor": "./scripts/publish.sh minor",
    "publish:major": "./scripts/publish.sh major",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist release",
    "rebuild": "pnpm exec electron-rebuild",
    "reset-db": "rm -f \"$HOME/Library/Application Support/cluttered/cluttered.db\" && echo 'Database reset successfully'"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "check-disk-space": "^3.4.0",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "framer-motion": "^11.15.0",
    "geist": "^1.5.1",
    "glob": "^11.0.0",
    "lucide-react": "^0.562.0",
    "posthog-node": "^5.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-git": "^3.30.0",
    "uuid": "^11.0.3",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/dockerode": "^3.3.31",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.0.5"
  }
}
